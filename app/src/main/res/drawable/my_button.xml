<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#e65a27" />
            <gradient android:angle="-90" android:startColor="#7A3218" android:endColor="#B18677"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#e65a27" />
            <solid android:color="#7A3218"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dip" android:color="#e65a27" />
            <gradient android:angle="-90" android:startColor="#D3A99A" android:endColor="#7A3218" />
        </shape>
    </item>
</selector>