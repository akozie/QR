<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.fragments.MerchantDetailsFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/map_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/merchant_details_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:text="@string/hello_blank_fragment"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <TextView
        android:id="@+id/merchant_details_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textStyle="italic"
        android:text="@string/hello_blank_fragment"
        app:layout_constraintStart_toStartOf="@+id/merchant_details_name"
        app:layout_constraintTop_toBottomOf="@+id/merchant_details_name" />


    <TextView
        android:id="@+id/merchant_details_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawablePadding="@dimen/margin_10dp"
        android:drawableStart="@drawable/ic_call"
        android:text="@string/hello_blank_fragment"
        app:layout_constraintStart_toStartOf="@+id/merchant_details_name"
        app:layout_constraintTop_toBottomOf="@+id/merchant_details_address" />


    <TextView
        android:id="@+id/merchant_details_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/ic_mail"

        android:drawablePadding="@dimen/margin_10dp"
        android:text="@string/hello_blank_fragment"
        app:layout_constraintStart_toStartOf="@+id/merchant_details_name"
        app:layout_constraintTop_toBottomOf="@+id/merchant_details_phone_number" />


</androidx.constraintlayout.widget.ConstraintLayout>